// views/index.pug

doctype html
html
    head
        link(rel='stylesheet', type='text/css', href='../css/main.css')
        title ReadNext
        body
        header
            div.logo-container
                img(src='../images/logo.png', alt='Logo')
                h1 Welcome To ReadNext!
            div.task-bar
                nav
                    ul
                        li
                            a(href='#') Home
                        li
                            a(href='#') About
                        li
                            a(href='#') Signup
                        li
                            a(href='#') Login
                        li 
                            a(href='#') Genres
                div.search-bar
                    input(type='text', placeholder='Search...')
        main
        h2 New Releases 
            div.new-releases-container
                each book in books
                    div.book-item
                        img(src=`data:image/jpeg;base64,${book.image_data}`, alt=`${book} Poster`)
                        div.book-details
                            p Title: #{book.book_name}
                            p Reviews: #{book.reviews}
                            p Stars: #{book.stars}
        footer
            p Copyright Â© 2023 Your Company